<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ListCategoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbListCategory"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:navigationIcon="@drawable/ic_left_arrow"
        app:title="@string/title"
        app:titleTextColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginEnd="@dimen/marginEnd"
        android:layout_marginBottom="@dimen/marginBottom"
        android:background="@drawable/custom_button_round"
        app:backgroundTint="@color/Addnote"
        android:onClick="showActivityAddCategory"
        android:paddingStart="150dp"
        android:paddingEnd="140dp"
        android:text="Add"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add_circle_color"/>

</LinearLayout>